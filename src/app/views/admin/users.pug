html(lang="en" data-theme="light")
    head
        include ../../partials/head.pug
    body
        include ../../partials/alerts/banner.pug

        
        include ../../partials/header/adminHeader.pug

        div.mx-10
            .relative.overflow-x-auto(class='sm:rounded-lg')
                
                .flex.items-center.justify-between.py-4.mx-3.bg-white(class='dark:bg-gray-900')
                    div
                        button#dropdownActionButton.inline-flex.items-center.text-gray-500.bg-white.border.border-gray-300.font-medium.rounded-lg.text-sm.px-3(data-dropdown-toggle='dropdownAction' class='focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 py-1.5 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700' type='button')
                            span.sr-only Action button
                            |Action
                            i.fas.fa-chevron-down.ml-2
                        // Dropdown menu
                        #dropdownAction.z-10.hidden.bg-white.divide-y.divide-gray-100.rounded-lg.shadow.w-44(class='dark:bg-gray-700 dark:divide-gray-600')
                            ul.py-1.text-sm.text-gray-700(class='dark:text-gray-200' aria-labelledby='dropdownActionButton')
                                li
                                    a.block.px-4.py-2(href='#' class='hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white') Reward
                                li
                                    a.block.px-4.py-2(href='#' class='hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white') Promote
                                li
                                    a.block.px-4.py-2(href='#' class='hover:bg-gray-100 dark:hover:bg-gray-600 dark:hover:text-white') Activate account
                            .py-1
                                a.block.px-4.py-2.text-sm.text-gray-700(href='#' class='hover:bg-gray-100 dark:hover:bg-gray-600 dark:text-gray-200 dark:hover:text-white') Delete User
                    
                        a.items-center.text-gray-500.bg-white.border.border-gray-300.font-medium.rounded-lg.text-sm.px-3.ml-3(href="/admin/users/add" class='focus:outline-none hover:bg-gray-100 focus:ring-4 focus:ring-gray-200 py-1.5 dark:bg-gray-800 dark:text-gray-400 dark:border-gray-600 dark:hover:bg-gray-700 dark:hover:border-gray-600 dark:focus:ring-gray-700' type='button')
                            i.fas.fa-plus.mr-2
                            |Add User
                    label.sr-only(for='table-search') Search
                    .relative
                        .absolute.inset-y-0.left-0.flex.items-center.pl-3.pointer-events-none
                            svg.w-5.h-5.text-gray-500(class='dark:text-gray-400' aria-hidden='true' fill='currentColor' viewBox='0 0 20 20' xmlns='http://www.w3.org/2000/svg')
                                path(fill-rule='evenodd' d='M8 4a4 4 0 100 8 4 4 0 000-8zM2 8a6 6 0 1110.89 3.476l4.817 4.817a1 1 0 01-1.414 1.414l-4.816-4.816A6 6 0 012 8z' clip-rule='evenodd')
                        input#table-search-users.block.p-2.pl-10.text-sm.text-gray-900.border.border-gray-300.rounded-lg.w-80.bg-gray-50(type='text' class='focus:ring-blue-500 focus:border-blue-500 dark:bg-gray-700 dark:border-gray-600 dark:placeholder-gray-400 dark:text-white dark:focus:ring-blue-500 dark:focus:border-blue-500' placeholder='Search for users')
                
                table.w-full.text-sm.text-left.text-gray-500(class='dark:text-gray-400')
                    thead.text-xs.text-gray-700.uppercase.bg-gray-50(class='dark:bg-gray-700 dark:text-gray-400')
                        tr
                            th.p-4(scope='col')
                                .flex.items-center
                                    input#checkbox-all-search.w-4.h-4.text-blue-600.bg-gray-100.border-gray-300.rounded(type='checkbox' class='focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600')
                                    label.sr-only(for='checkbox-all-search') checkbox
                            th.px-6.py-3(scope='col')
                                | Name
                            th.px-6.py-3(scope='col')
                                | Role
                            th.px-6.py-3(scope='col')
                                | Status
                            th.px-6.py-3(scope='col')
                                | Action
                    tbody
                        for item in users
                            tr.bg-white.border-b(class='dark:bg-gray-800 dark:border-gray-700 hover:bg-gray-50 dark:hover:bg-gray-600')
                                td.w-4.p-4
                                    .flex.items-center
                                        input#checkbox-table-search-1.w-4.h-4.text-blue-600.bg-gray-100.border-gray-300.rounded(type='checkbox' class='focus:ring-blue-500 dark:focus:ring-blue-600 dark:ring-offset-gray-800 dark:focus:ring-offset-gray-800 focus:ring-2 dark:bg-gray-700 dark:border-gray-600')
                                        label.sr-only(for='checkbox-table-search-1') checkbox
                                th.flex.items-center.px-6.py-4.text-gray-900.whitespace-nowrap(scope='row' class='dark:text-white')
                                    img.w-10.h-10.rounded-full(src='/docs/images/people/profile-picture-1.jpg' alt='Jese image')
                                    .pl-3
                                        .text-base.font-semibold #{item.username}
                                        span.font-normal.text-gray-500 #{item.email}
                                td.px-6.py-4
                                    if item.admin
                                        span.bg-red-100.text-red-800.text-xs.font-medium.mr-2.rounded-full.px-3.py-1 Admin
                                    if item.email === user.email
                                        span.bg-blue-100.text-blue-800.text-xs.font-medium.rounded-full.px-3.py-1 You
                                td.px-6.py-4
                                    .flex.items-center
                                        .rounded-full.bg-green-500.mr-2(class='h-2.5 w-2.5')
                                        |  Online
                                td.px-6.py-4
                                    a.font-medium.text-blue-600(href=`/admin/users/${user.id}/edit` class='dark:text-blue-500 hover:underline') Edit user
                        
        //flowbite CDN
        script(src='https://cdnjs.cloudflare.com/ajax/libs/flowbite/1.6.5/flowbite.min.js')